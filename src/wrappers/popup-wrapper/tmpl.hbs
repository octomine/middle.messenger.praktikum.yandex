<div class='flex_vertical align_center justify_center popup_cover'>
  <div class='flex_vertical align_center {{> styles element='plate' modifiers='popup'}}'>
    {{> label title modifiers=(concat title.modifiers 'popup')}}
    <div class='flex_vertical align_center justify_center popup__content'>
      {{#if custom}}
      {{{custom}}}
      {{else}}
      {{message}}
      {{/if}}
    </div>
    {{{button}}}
    {{#if footer}}
    {{> label txt=footer modifiers='s,error' styles='footer'}}
    {{/if}}
  </div>
</div>
